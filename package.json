{
  "name": "ts-api-template",
  "version": "1.0.0",
  "description": "Node.js TypeScript API Template",
  "main": "dist/infrastructure/web/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/infrastructure/web/server.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/infrastructure/web/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:seed:admin": "tsx scripts/seed-admin.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndifabio92/node-ts-api-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ndifabio92/node-ts-api-template/issues"
  },
  "homepage": "https://github.com/ndifabio92/node-ts-api-template#readme",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@types/pg": "^8.15.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.16.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.2",
    "prisma": "^6.10.1",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.67"
  }
}
