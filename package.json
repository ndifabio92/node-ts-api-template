  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
