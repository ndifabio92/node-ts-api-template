  "description": "Node.js TypeScript API Template",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/server.js",
    "test": "jest",
